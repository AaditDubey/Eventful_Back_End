@using Microsoft.AspNetCore.Mvc.Localization
@using Time.Commerce.Application.Services.Catalog;
@using Time.Commerce.Contracts.Views.Cms;
@using TimeNet;
@inject IHtmlLocalizer<SharedResources> SharedResources
@model WidgetFootersView

<style>
    .dropdown-content {
        display: none;
    }
        .dropdown-content a {
            display: block;
        }
    .dropdown:hover .dropdown-content {
        display: block;
    }
</style>
<footer class="axil-footer-area footer-style-2">
    <!-- Start Footer Top Area  -->
    <div class="footer-top separator-top">
        <div class="container">
            <div class="row">
                @if (Model is not null && Model.Columns  is not null)
                {
                    foreach(var column in Model.Columns)
                    {
                        <div class="col-lg-3 col-sm-6">
                            <div class="axil-footer-widget">
                                <h5 class="widget-title">@column.Title</h5>
                                <div class="inner">
                                    <ul>
                                        @foreach(var row in column.WidgetFootersRows)
                                        {
                                            <li><a href="@row.LinkUrl">@row.LinkText</a></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <!-- End Footer Top Area  -->
    <!-- Start Copyright Area  -->
    <div class="copyright-area copyright-default separator-top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-4">
                    <div class="social-share">
                        <a href="/" aria-label="Link to Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="/" aria-label="Link to Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="/" aria-label="Link to Twitter"><i class="fab fa-twitter"></i></a>
                        <a href="/" aria-label="Link to Linkedin"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-12">
                    <div class="copyright-left d-flex flex-wrap justify-content-center">
                        <ul class="quick-link">
                            <li>© 2023. All rights reserved by <a target="_blank" href="/">Time Commerce</a>.</li>
                        </ul>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-12">
                    <div class="copyright-right d-flex flex-wrap justify-content-xl-end justify-content-center align-items-center">
                        <span class="card-text">Accept For</span>
                        <ul class="payment-icons-bottom quick-link">
                            <li><img src="~/theme/assets/images/icons/cart/cart-1.png" alt="paypal cart"></li>
                            <li><img src="~/theme/assets/images/icons/cart/cart-2.png" alt="paypal cart"></li>
                            <li><img src="~/theme/assets/images/icons/cart/cart-5.png" alt="paypal cart"></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Copyright Area  -->
</footer>